<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFA07A"
    tools:context="com.example.projekt_proz.activities.AfterLogin">

    <TextView
        android:id="@+id/text11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Lista dostępnych testów:"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textSize="25sp"
        android:layout_margin="100dp"

        android:onClick="backToMain"
        android:text="Wróć się" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e6ed17"
        android:layout_marginTop="150dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="4"
            android:gravity="center"
            android:text="Tytuł"
            android:textColor="#000000"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/tvStartD"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Początek"
            android:textColor="#000"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tvEndD"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Koniec"
            android:textColor="#000"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tvQAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Licz.P"
            android:textColor="#000"
            android:textSize="20sp" />

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="220dp"
        android:layout_marginBottom="155dp"
        android:onClick="goToTest"
        android:id="@+id/recycler">

    </android.support.v7.widget.RecyclerView>



</RelativeLayout>